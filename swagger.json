{
  "swagger": "2.0",
  "info": {
    "description": "REST API documentation for the plug-in Create Branch Wizard for Bitbucket Server.\n                                    The REST API allows you to maintain the branch mappings of the plug-in.",
    "version": "v1",
    "title": "Create Branch Wizard for Bitbucket Server REST API",
    "contact": {
      "name": "Mibex Software GmbH",
      "url": "https://www.mibexsoftware.com"
    },
    "license": {
      "name": "Copyright (c) 2018 by Mibex Software GmbH, Switzerland. All rights reserved.",
      "url": "https://mibexsoftware.com/imprint/"
    }
  },
  "host": "YOUR_BITBUCKET_SERVER",
  "basePath": "/rest/createbranchwizard/1.0",
  "tags": [
    {
      "name": "Branch mappings"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/projects/{projectKey}/repos/{repositorySlug}/branch-mappings": {
      "get": {
        "tags": [
          "Branch mappings"
        ],
        "summary": "Returns the branch mappings for this repository.",
        "description": "",
        "operationId": "getBranchMappings",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "projectKey",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "repositorySlug",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Branch mappings found"
          },
          "401": {
            "description": "The currently authenticated user does not have REPO_ADMIN credentials"
          }
        }
      },
      "post": {
        "tags": [
          "Branch mappings"
        ],
        "summary": "Creates a branch mapping.",
        "description": "",
        "operationId": "addBranchMapping",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "projectKey",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "repositorySlug",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "Branch mapping",
            "required": true,
            "schema": {
              "$ref": "#/definitions/BranchMapping"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Branch mapping created"
          },
          "401": {
            "description": "The currently authenticated user does not have REPO_ADMIN credentials"
          }
        }
      },
      "put": {
        "tags": [
          "Branch mappings"
        ],
        "summary": "Updates a branch mapping.",
        "description": "",
        "operationId": "updateBranchMapping",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "projectKey",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "repositorySlug",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "Branch mapping",
            "required": true,
            "schema": {
              "$ref": "#/definitions/BranchMapping"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Branch mapping updated"
          },
          "401": {
            "description": "The currently authenticated user does not have REPO_ADMIN credentials"
          },
          "404": {
            "description": "The branch mapping does not exist"
          }
        }
      },
      "delete": {
        "tags": [
          "Branch mappings"
        ],
        "summary": "Deletes a branch mapping in this repository.",
        "description": "",
        "operationId": "deleteBranchMapping",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "projectKey",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "repositorySlug",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "id",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "Branch mapping deleted"
          },
          "401": {
            "description": "The currently authenticated user does not have REPO_ADMIN credentials"
          },
          "404": {
            "description": "The branch mapping does not exist"
          }
        }
      }
    }
  },
  "definitions": {
    "BranchMapping": {
      "type": "object",
      "properties": {
        "jiraProjectKey": {
          "type": "string",
          "description": "The JIRA project key that belongs to this repository. You can have multiple mappings with different JIRA projects for the same repository."
        },
        "jiraIssueTypeId": {
          "type": "integer",
          "format": "int64",
          "description": "The JIRA issue type ID for this branch mapping. Whenever a branch is created from this JIRA project and issue type, the chosen branch type and branch from values below are filled in by the plug-in."
        },
        "branchType": {
          "type": "string",
          "description": "The branch type you want to use for the chosen JIRA project and issue type.",
          "enum": [
            "FEATURE",
            "RELEASE",
            "CUSTOM",
            "HOTFIX"
          ]
        },
        "customBranchPrefix": {
          "type": "string",
          "description": "The prefix for custom branches, e.g. 'security-fixes'. The plug-in will append the JIRA issue key to the branch name, resulting in branch names like 'security-fixes/MYPROJ-123-CSRF-problem'."
        },
        "branchFrom": {
          "type": "string",
          "description": "The branch name you want to branch from when a new branch is created for the chosen JIRA project and issue type."
        },
        "overrideBranchFrom": {
          "type": "boolean",
          "description": "true if you want to override the branch from value (otherwise, the default branch for the repository is taken).",
          "default": false
        },
        "id": {
          "type": "integer",
          "format": "int32",
          "description": "ID of the branch mapping. Only necessary when updating/deleting a mapping."
        }
      },
      "xml": {
        "name": "branchMapping"
      }
    }
  }
}
